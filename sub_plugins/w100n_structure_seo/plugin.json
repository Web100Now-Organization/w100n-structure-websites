{
  "id": "w100n_structure_websites_structure_seo",
  "name": "Structure SEO",
  "version": "1.0.0",
  "description": "Plugin for managing SEO metadata of pages. Provides full control over meta tags, Open Graph, Twitter Cards, and other SEO parameters.",
  "author": "Web100Now",
  "organization": "web100now",
  "short_name": "structure_seo",
  "category": "seo",
  "default_enabled": true,
  "requires_role": "website",
  "write_requires_role": "platform",
  "sync_fields": ["short_name", "name", "enabled", "config"],
  "config_sync_fields": {
    "config": ["public"],
    "sub_plugins": ["short_name", "name", "enabled", "config"]
  },
  "permissions": {
    "read": ["bot", "website", "admin", "platform"],
    "write": ["platform"]
  },
  "graphql_schema": "schema.graphqls",
  "resolvers": "resolvers.go",
  "endpoints": [
    {
      "type": "query",
      "name": "seo",
      "description": "Get SEO metadata for a page",
      "requires_write": false
    },
    {
      "type": "query",
      "name": "seoConfigFull",
      "description": "Fetch full SEO configuration (LOCAL_DEVELOPMENT only)",
      "requires_write": true
    },
    {
      "type": "mutation",
      "name": "updateSeoConfig",
      "description": "Update SEO configuration (LOCAL_DEVELOPMENT only)",
      "requires_write": true
    },
    {
      "type": "mutation",
      "name": "generateSeoFavicons",
      "description": "Generate favicon package for Next.js (LOCAL_DEVELOPMENT only)",
      "requires_write": true
    }
  ],
  "dependencies": [],
  "config": {
    "mongo_collections": ["structure_seo"]
  }
}

