{
  "id": "w100n_structure_websites",
  "name": "Website Structure",
  "version": "1.2.0",
  "description": "Plugin for managing website structures. Provides core information about site structure and configuration.",
  "author": "Web100Now",
  "organization": "web100now",
  "short_name": "websites",
  "category": "structure",
  "default_enabled": true,
  "requires_role": "website",
  "write_requires_role": "platform",
  "sync_fields": ["short_name", "name", "enabled", "config", "sub_plugins"],
  "permissions": {
    "read": ["bot", "website", "admin", "platform"],
    "write": ["platform"]
  },
  "graphql_schema": "schema.graphqls",
  "resolvers": "resolvers.go",
  "endpoints": [
    {
      "type": "query",
      "name": "structureWebsites",
      "description": "Fetch website structures",
      "requires_write": false
    },
    {
      "type": "mutation",
      "name": "updateStructureWebsite",
      "description": "Edit website structure (LOCAL_DEVELOPMENT only)",
      "requires_write": true
    },
    {
      "type": "mutation",
      "name": "applyStructureTemplate",
      "description": "Apply a structure template to clients that reference it",
      "requires_write": true
    }
  ],
  "sub_plugins": [
    {
      "id": "google_reviews",
      "name": "Google Reviews",
      "short_name": "google_reviews",
      "default_enabled": false
    },
    {
      "id": "structure_seo",
      "name": "Structure SEO",
      "short_name": "structure_seo",
      "default_enabled": true
    }
  ],
  "dependencies": [],
  "config": {
    "mongo_collections": ["structure_websites"]
  }
}

